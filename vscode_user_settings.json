{
    "workbench.colorTheme": "Solarized Light",
    "remote.SSH.remotePlatform": {
        "hostxyz": "linux",
        "hostxyz": "linux"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "editor.tabCompletion": "on",
    "open-file-from-path.regExp": "(?<=(\\s|^))\\/[^\\s]+",
    "remote.SSH.serverInstallPath": {
        "hostxyz": "homedir/path"
    },
    "git.openRepositoryInParentFolders": "always",
    "search.smartCase": true,
    "search.followSymlinks": false,
    "search.mode": "reuseEditor",
    "GitLive.Special branches": "main|master|trunk|dev|develop|qa|test|release[-/].*",
    "GitLive.Issue tracker integration": "Disabled",
    "[python]": {
        "editor.formatOnType": true
    },
    "gitlens.views.commits.avatars": false,
    "git.autofetch": true,
    "gitlens.views.formats.commits.label": "${❰ tips ❱➤  }${email }${message }${date}",
    "gitlens.views.commitDetails.files.layout": "tree",
    "terminal.integrated.persistentSessionScrollback": 1000,
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.shellIntegration.suggestEnabled": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "yaml.schemas": {
        "homedir/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
    "atlascode.bitbucket.enabled": true,
    "atlascode.jira.enabled": false,
    "gitlens.graph.layout": "editor",
    "terminal.integrated.tabStopWidth": 4,
    "terminal.integrated.allowChords": false,
    "git-graph.date.type": "Commit Date",
    "git-graph.defaultColumnVisibility": {
        
        "Date": true,
        "Author": true,
        "Commit": true
    }
}
